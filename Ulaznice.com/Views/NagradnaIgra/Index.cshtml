@model IEnumerable<Ulaznice.com.Models.NagradnaIgra>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OpisNagradneIgre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nagrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InformacijeODobitniku)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poruka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OpisNagradneIgre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nagrada.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InformacijeODobitniku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poruka.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
