@model IEnumerable<Ulaznice.com.Models.Karta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MjestoDogađaja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumDogađaja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IzvođačiDogađaja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CijenaKarte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpisDogađaja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MjestoDogađaja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumDogađaja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IzvođačiDogađaja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CijenaKarte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpisDogađaja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail.Id)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {
                 <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <nobr>|</nobr>
                 <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> <nobr>|</nobr>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
